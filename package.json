{
	"name": "nodejsscript",
	"version": "1.0.3",
	"author": "Jan Andrle <andrle.jan@centrum.cz>",
	"license": "MIT",
	"description": "A tool for writing better “one–file” scripts",
	"homepage": "https://github.com/jaandrle/nodejsscript",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jaandrle/nodejsscript.git"
	},
	"bugs": {
		"url": "https://github.com/jaandrle/nodejsscript/issues"
	},
	"main": "index.js",
	"type": "module",
	"bin": {
		"nodejsscript": "bin/index.mjs",
		"njs": "bin/index.mjs"
	},
	"exports": {
		".": "./index.js"
	},
	"files": [
		"bin/*.mjs",
		"_index.d.ts",
		"index.d.ts",
		"index.js",
		"src",
		"tldr.md"
	],
	"types": "index.d.ts",
	"typesVersions": {
		"*": {
			".": [
				"./index.d.ts"
			]
		}
	},
	"scripts": {
		"build:doc": "bs/buld:doc.mjs",
		"build:lint": "bs/buld:lint.mjs",
		"build": "bs/buld.mjs"
	},
	"engines": {
		"node": ">= 18.0.0"
	},
	"keywords": [
		"cli",
		"nodejs"
	],
	"jshintConfig": {
		"esversion": 11,
		"node": "true",
		"module": true,
		"undef": "true",
		"unused": true,
		"latedef": "true",
		"maxparams": 4,
		"maxdepth": 4,
		"maxcomplexity": 15,
		"-W014": true,
		"topLevelAwait": true
	},
	"peerDependencies": {
		"shelljs": "~0.8"
	},
	"dependencies": {
		"@types/sade": "~1.7",
		"@types/shelljs": "~0.8",
		"abort-controller": "~3.0",
		"css-in-console": "~2.0",
		"log-update-async-hook": "~2.0",
		"node-fetch": "~3.3",
		"sade": "~1.8",
		"shell-escape-tag": "~2.0"
	},
	"devDependencies": {
		"jshint": "~2.13",
		"typedoc": "~0.26",
		"typedoc-plugin-markdown": "~4.2"
	}
}
